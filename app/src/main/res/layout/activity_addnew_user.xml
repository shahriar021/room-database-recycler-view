<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddnewUser">

    <EditText
        android:id="@+id/boid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BO id:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
        android:id="@+id/stckname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock name:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/boid"
        />
    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/stckname"
        />
    <EditText
        android:id="@+id/buyingp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="buying price:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/quantity"
        />
    <EditText
        android:id="@+id/sellingp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="selling price:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buyingp"
        />
    <EditText
        android:id="@+id/profitloss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profit/loss:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sellingp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        app:layout_constraintStart_toStartOf="parent"
        android:text="save"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/profitloss"/>

</androidx.constraintlayout.widget.ConstraintLayout>